<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="货品品名:"
                android:textColor="@color/word_color"
                android:textSize="@dimen/query_price_textsize" />
        </LinearLayout>

        <EditText
            android:id="@+id/produce_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="22dp"
            android:background="@null"
            android:hint="请输入货物品名"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/edittext_size" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp" >

        <LinearLayout
            android:id="@+id/weight_tx"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重量:"
                android:textColor="@color/word_color"
                android:textSize="@dimen/query_price_textsize" />
        </LinearLayout>

        <TextView
            android:id="@+id/danweidun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="12dp"
            android:paddingRight="15dp"
            android:text="吨"
            android:textColor="@color/word_color"
            android:textSize="@dimen/edittext_size" />

        <EditText
            android:id="@+id/write_product_weight"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/danweidun"
            android:layout_toRightOf="@id/weight_tx"
            android:background="@null"
            android:hint="预计吨数"
            android:inputType="numberDecimal"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/edittext_size" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_color" />
    
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp" >

        <LinearLayout
            android:id="@+id/tiji_tx"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:visibility="invisible"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体积:"
                android:textColor="@color/word_color"
                android:textSize="@dimen/query_price_textsize" />
        </LinearLayout>

        <TextView
            android:id="@+id/danweifang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="12dp"
            android:paddingRight="15dp"
            android:text="方"
            android:textColor="@color/word_color"
            android:textSize="@dimen/edittext_size" />

        <EditText
            android:id="@+id/write_product_volume"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/danweifang"
            android:layout_toRightOf="@id/tiji_tx"
            android:background="@null"
            android:hint="预计体积"
            android:inputType="numberDecimal"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/edittext_size" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_color" />

    
    <RelativeLayout
        android:id="@+id/zhanyongchechang_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp" >

        <LinearLayout
            android:id="@+id/use_chechang_tx"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="占用车长:"
                android:textColor="@color/word_color"
                android:textSize="@dimen/query_price_textsize" />
        </LinearLayout>

        <TextView
            android:id="@+id/danweizhanyong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="12dp"
            android:paddingRight="15dp"
            android:text="米"
            android:textColor="@color/word_color"
            android:textSize="@dimen/edittext_size" />

        <EditText
            android:id="@+id/write_use_truck_len"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/danweizhanyong"
            android:layout_toRightOf="@id/use_chechang_tx"
            android:background="@null"
            android:hint="预计占用车长"
            android:inputType="numberDecimal"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/edittext_size" />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/user_truck_len_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_color" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/length_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需求车长:"
                android:textColor="@color/word_color"
                android:textSize="@dimen/query_price_textsize" />
        </LinearLayout>

        <TextView
            android:id="@+id/choose_length"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请选择需求车长"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"
            android:textSize="@dimen/edittext_size" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_color" />

    
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/type_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需求车型:"
                android:textColor="@color/word_color"
                android:textSize="@dimen/query_price_textsize" />
        </LinearLayout>

        <TextView
            android:id="@+id/choose_truck"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请选择需求车型"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"
            android:textSize="@dimen/edittext_size" />
    </LinearLayout>
    
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_color" />

    <Button
        android:id="@+id/second_next_step"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/login_btn"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@color/white" />

</LinearLayout>