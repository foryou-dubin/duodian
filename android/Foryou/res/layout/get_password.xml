<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_layout"
        layout="@layout/top_layout" />

    <EditText
        android:id="@+id/account_edit"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/title_layout"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_input"
        android:hint="请输入手机号"
        android:inputType="numberSigned"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/black"
        android:textColorHint="#bcbcbc"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/yanzhengma_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/account_edit"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/yanzhengma"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:background="@drawable/login_input"
            android:hint="请输入验证码"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/black"
            android:textColorHint="#bcbcbc"
            android:textSize="15dp" />

        <Button
            android:id="@+id/get_yanzhengma"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:background="@drawable/login_btn"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/voice_verify_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yanzhengma_layout"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="短信验证码收不到?试试"
            android:textColor="#9a9a9a"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/voice_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语音验证码"
            android:textColor="@color/red"
            android:textSize="14dp" />
    </LinearLayout>

    <Button
        android:id="@+id/next_step"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/voice_verify_layout"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/login_btn"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold" />

</RelativeLayout>