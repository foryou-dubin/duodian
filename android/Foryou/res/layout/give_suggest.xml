<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical" >
    
	<include
	    android:id="@+id/title_layout"
	    layout="@layout/top_layout" 
	    />
	
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" 
	    android:layout_margin="@dimen/padding_size"
	    android:paddingBottom="44dp"
	    android:background="@color/white"
	    android:orientation="vertical"
	    >
	    
	    <EditText
	        android:id="@+id/give_content"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:minLines="6"
	        android:gravity="top"
	        android:layout_marginTop="23dp" 
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        android:hint="请输入您的宝贵意见以及反馈"
	        android:textColorHint="@color/hint_color"
	        android:textSize="15dp"
	        android:textColor="@color/black"
	        android:background="@drawable/choose_gray"
	        />
	    
	    <Button
            android:id="@+id/finish_btn"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/padding_size"
            android:layout_marginRight="@dimen/padding_size"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_btn"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />
	</LinearLayout>
</LinearLayout>
