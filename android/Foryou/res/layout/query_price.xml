<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_layout"
        layout="@layout/top_layout" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_size"
            android:layout_marginLeft="@dimen/padding_size"
            android:layout_marginRight="@dimen/padding_size"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="87dp"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/hint"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:background="@color/tishi_bg_color"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="提示"
                    android:textColor="@color/white" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@id/hint" >

                    <ImageView
                        android:id="@+id/xunjia_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/xunjia_h" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="24dp"
                        android:layout_toRightOf="@id/xunjia_img"
                        android:layout_marginLeft="10dp"
                        android:text="先询价"
                        android:textColor="@color/title_bg" />

                    <TextView
                        android:id="@+id/xiadan_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dp"
                        android:text="后下单" />

                    <ImageView
                        android:id="@+id/xiadan_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/xiadan_text"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/xiadan" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/jiantou" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/base_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_size"
                android:layout_marginBottom="@dimen/padding_size"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>